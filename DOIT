CHUNK=10
OUTPUT_DIR="output"
INPUT_DIR="input"
MAIN="scripts/ollama_main.py"

MODEL=$1
INPUT="I"
PROMPTS="P0"

test -d $OUTPUT_DIR/$MODEL || mkdir -p $OUTPUT_DIR/$MODEL
for p in $PROMPTS
do
	OUT=`echo $p | sed -e 's/P/O/'`
	python $MAIN $MODEL $INPUT_DIR/$INPUT $INPUT_DIR/$p -n 10 -o $OUTPUT_DIR/$MODEL/$OUT
done
