ollama pull $MODEL

test -d $DIR/$MODEL || mkdir $DIR/$MODEL
for p in $PROMPTS
do
	OUT=`echo $p | sed -e 's/P/O/'`
	python $MAIN $DIR/$INPUT $DIR/$p -n 10 -o $DIR/$MODEL/$OUT $AUTH
done
