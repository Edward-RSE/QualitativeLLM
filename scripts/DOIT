CHUNK=10
DIR=data
MAIN="source/main.py"
AUTH=""

MODEL=qwen2-72B-instruct
MODEL=qwen2-7B-instruct

INPUT=I
PROMPTS="P5 P6"
PROMPTS="P6b"
PROMPTS=P8-7B
PROMPTS=P0

